<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.3.10</version>
    </parent>

    <version>1.0.0</version>
    <name>java-spring-webflux-sample</name>
    <artifactId>java-spring-webflux-sample</artifactId>
    <description>java-spring-webflux-sample</description>

    <properties>
        <java.version>21</java.version>
        <maven.compiler.target>21</maven.compiler.target>
        <maven.compiler.source>21</maven.compiler.source>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <sonar.exclusions>
            src/main/java/com/webflux/sample/config/*.java
            src/main/java/com/webflux/sample/document/*.java
            src/main/java/com/webflux/sample/dto/*.java
            src/main/java/com/webflux/sample/model/*.java
            src/main/java/com/webflux/sample/exception/*.java
            src/main/java/com/webflux/sample/handler/*.java
            src/main/java/com/webflux/sample/repository/*.java
            src/main/java/com/webflux/sample/WebFluxSampleApplication.java
            src/main/java/com/webflux/sample/service/ExceptionService.java
            src/main/java/com/webflux/sample/service/FreeService.java
            src/main/java/com/webflux/sample/service/WebClientSampleService.java
            src/main/java/com/webflux/sample/service/WebFluxSampleService.java
        </sonar.exclusions>
    </properties>

    <dependencies>

        <!--SPRING BOOT WEB FLUX-->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-webflux</artifactId>
